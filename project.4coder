version(1);
project_name = "tnt";

patterns = {
    "*.c",
    "*.h",
    "*.cpp",
    "*.hpp",
    "*.sh",
    "*.bash",
    "*.bat",
    "*.glsl",
    "*.4coder",
};

blacklist_patterns =
{
	".*",
};

load_paths_custom =
{
	{"code"},
    {"tools"},
};

load_paths =
{
    { load_paths_custom, .os = "linux"},
	{ load_paths_custom, .os = "win"  },
};

build_linux = "./tools/build-linux.sh debug";
build_win32 = ".\\tools\\build-win32.bat";

run_linux = "./tools/run-linux.sh tnt debug";
run_win32 = ".\\tools\\run-win32.bat tnt debug";

combo_linux = "./tools/build-linux.sh debug && ./tools/run-linux.sh tnt debug";
combo_win32 = ".\\tools\\build-win32.bat && .\\tools\\run-win32.bat tnt debug";

command_list =
{
    { 
        .name = "build",
        .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
        .cmd = { 
            { build_linux, .os ="linux" }, 
            { build_win32, .os ="win"   },
        }, 
    },
    
    { 
        .name = "run",
        .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
        .cmd = { 
            { run_linux, .os ="linux" }, 
            { run_win32, .os ="win"   },
        }, 
    },
	
    { 
        .name = "combo",
        .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
        .cmd = { 
            { combo_linux, .os ="linux" }, 
            { combo_win32, .os ="win"   },
        }, 
    },
};

fkey_command[5] = "build";
fkey_command[6] = "run";
fkey_command[7] = "combo";
